<div class="bg-gray-100 min-h-screen py-12">
  <div class="container mx-auto">
    <h1 class="text-4xl font-bold text-center text-gray-800 mb-10">Arty≈õci</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <% @users.each do |user| %> 
      <div class="bg-white shadow-lg rounded-xl overflow-hidden p-6 hover:scale-105 transition-transform duration-300">
      <div>
          <h2 class="text-xl font-bold text-gray-800">
            <%= link_to user.name, events_user_path(user) %>
          </h2>
          <p class="text-gray-600"><%= user.email %></p>
          <p class="text-gray-500 text-sm mt-2">Wydarzenia: <%= user.events.count %></p>
        </div>
      </div>
    <% end %> <%# End of the loop -%>
  </div>

    <div class="mt-10 text-center">
      <a href="<%= new_user_path %>" class="bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 shadow-lg transition">
        Dodaj artyste
      </a>
    </div>
  </div>
</div>
