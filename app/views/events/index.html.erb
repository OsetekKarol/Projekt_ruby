<div class="bg-gray-100 min-h-screen py-12">
  <div class="container mx-auto">
    <h1 class="text-4xl font-bold text-center text-gray-800 mb-10">Wydarzenia</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <% @events.each do |event| %>
        <div class="bg-white shadow-lg rounded-xl overflow-hidden hover:scale-105 transition-transform duration-300">
          <div class="p-6">
            <h2 class="text-xl font-bold text-gray-800"><%= event.title %></h2>
            <p class="text-gray-600 mt-2"><%= truncate(event.description, length: 100) %></p>
            <p class="text-gray-500 text-sm mt-4">Data: <%= event.date.strftime('%d %B %Y, %H:%M') %></p>
            <a href="<%= event_path(event) %>" class="inline-block mt-6 text-blue-600 hover:underline">
              Wyświetl szczegóły &rarr;
            </a>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-10 text-center">
      <a href="<%= new_event_path %>" class="bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 shadow-lg transition">
        Dodaj wydarzenie
      </a>
    </div>
  </div>
</div>
