<div class="bg-gray-100 min-h-screen py-12">
  <div class="container mx-auto">
    <h1 class="text-4xl font-bold text-center text-gray-800 mb-10">Kategorie</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
  <% @categories.each do |category| %>
        <div class="bg-white shadow-lg rounded-xl overflow-hidden p-6 hover:scale-105 transition-transform duration-300">
      <h2 class="text-xl font-bold text-gray-800">
      <%= link_to category.name, events_category_path(category) %>

      </h2>
      <p class="text-gray-600 mt-2">Wydarzenia: <%= category.events.count %></p>
    </div>
  <% end %>
</div>

    <div class="mt-10 text-center">
      <a href="<%= new_category_path %>" class="bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 shadow-lg transition">
        Dodaj kategorie
      </a>
    </div>
  </div>
</div>
